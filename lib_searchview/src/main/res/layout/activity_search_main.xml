<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/search_main"
    tools:context=".SearchMainActivity"
    android:background="@color/sys_common_bg">
    <LinearLayout
        android:id="@+id/search_linearlayout_bar"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/search_topbar_back"
            android:padding="5dp"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_action_left"/>
        <com.lib_searchview.ClearEditTextView
            android:id="@+id/search_edittext"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:drawableLeft="@drawable/ic_action_search"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:textSize="12sp"
            android:background="@drawable/bg_edittext"
            android:inputType="textNoSuggestions" />
        <TextView
            android:id="@+id/search_main_topbar_search"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="搜索"
            android:padding="5dp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ListView
                android:id="@+id/lv_searchresoult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ListView
                android:id="@+id/lv_searchtip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/search_labellinerlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="25dp"
                    android:text="历史记录"
                    android:paddingLeft="13dp"
                    android:textSize="16sp"/>
                <TextView
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_action_delete"/>
            </RelativeLayout>
            <com.lib_searchview.LabelLayoutView
                android:id="@+id/search_label"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/search_hot_linearlayout"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="热门搜索"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <ListView
                android:id="@+id/lv_hotsearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>