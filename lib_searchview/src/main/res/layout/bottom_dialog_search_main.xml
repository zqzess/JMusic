<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">
        <ImageView
            android:id="@+id/bottom_dialog_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/bottom_dialog_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="星辰大海"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/bottom_dialog_tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="作者"/>
        </LinearLayout>
        <TextView
            android:id="@+id/bottom_dialog_tv_favourite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_like"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_add"/>
        <TextView
            android:id="@+id/bottom_dialog_tv_btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加到歌单"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/bottom_dialog_tv_btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="关闭"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:padding="5dp"/>

</LinearLayout>